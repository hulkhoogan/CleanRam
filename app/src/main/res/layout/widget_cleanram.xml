<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    >


    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/text"
        android:background="@drawable/example_appwidget_preview"
        android:text="CleanRam"
        android:textAppearance="@android:style/TextAppearance.Widget.TextView.SpinnerItem"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColorHighlight="@android:color/holo_red_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="14sp"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>